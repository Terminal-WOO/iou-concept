# IOU Concept - Environment Variables

# Database Configuration
DATABASE_URL=postgresql://iou_user:iou_password@localhost:5432/iou_context
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iou_context
DB_USER=iou_user
DB_PASSWORD=iou_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Azure OpenAI (optioneel)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# OpenAI (alternatief)
OPENAI_API_KEY=sk-your-api-key

# Anthropic Claude (alternatief)
ANTHROPIC_API_KEY=your-anthropic-key

# Azure Cognitive Services
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_KEY=your-key

# Azure Form Recognizer
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-key

# Azure Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=iou-documents

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Features (toggle on/off)
ENABLE_AI_METADATA=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AUTO_COMPLIANCE=true

# Model Configuration
AI_MODEL_PROVIDER=azure  # azure, openai, anthropic, local
CONFIDENCE_THRESHOLD=0.70  # Minimum confidence voor AI suggesties

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
CACHE_TTL_SECONDS=300
